<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/photo_select_recycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/photo_select_bottom"
        android:clickable="true"
        android:minHeight="?android:attr/actionBarSize"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/photo_select_tv_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:drawableRight="@mipmap/photo_default_icon_triangle"
            android:gravity="center|left"
            android:paddingLeft="@dimen/photo_padding16"
            android:paddingRight="@dimen/photo_padding16"
            android:text="@string/photo_all_image"
            android:textColor="@color/photo_color_ffffff"
            android:textSize="@dimen/photo_text_size16" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/photo_select_tv_preview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:gravity="center|right"
            android:paddingLeft="@dimen/photo_padding16"
            android:paddingRight="@dimen/photo_padding16"
            android:text="@string/photo_preview"
            android:textColor="@color/photo_color_ffffff"
            android:textSize="@dimen/photo_text_size16"
            android:visibility="invisible" />
    </LinearLayout>
</FrameLayout>